{
  "extends": "@repo/configs/ts/nextjs.json",
  "compilerOptions": {
    "preserveSymlinks": true,
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
    },
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
